@model CMSPlus.Domain.Models.TopicModels.TopicDetailsModel
@using CMSPlus.Domain.Entities

@{
    ViewBag.Title = "Details";
    Layout = "_Layout";
}
<div class="container m-3">
    <h1 class="row-12 text-black">@ViewBag.Topic.Title</h1>
    <div class="row">
        <p class="col-6 text-start text-black-50">Updated: @ViewBag.Topic.UpdatedOnUtc</p>
        <p class="col-6 text-end text-black-50">Created: @ViewBag.Topic.CreatedOnUtc</p>
    </div>
    <p class="row-12 text-black">@Html.Raw(@ViewBag.Topic.Body)</p>
    <div class="row">
        <p class="col-12 text-black-50 text-end">System name: @ViewBag.Topic.SystemName</p>
    </div>


    <div id="comments" class="comments-area">
        <h3 class="comments-title uppercase">
            @ViewBag.NrComments commments for “<span>@ViewBag.Topic.Title</span>”
        </h3><ol class="comment-list">


            @if(ViewBag.Comments != null)
                @foreach (CommentEntity comment in ViewBag.Comments)
                {
                    <li class="comment even thread-even depth-1" id="li-comment-7">
                        <article id="comment-7" class="comment-inner">
                            <div class="flex-row align-top">
                                <div class="flex-col">
                                </div><div class="flex-col flex-grow">
                                    <cite class="strong fn">@comment.FullName</cite> 
                                    <span class="says">says:</span><div class="comment-content"><p>@comment.Comment</p></div><div class="comment-meta commentmetadata uppercase is-xsmall clear">
                                        <a href="#">
                                            <time datetime="@comment.CreatedOnUtc" class="pull-left">
                                                @comment.CreatedOnUtc.Value.ToLongDateString()
                                            </time>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </article>
                    </li>
                }
           




        </ol>
        
        <div id="respond" class="comment-respond">
            <h3 id="reply-title" class="comment-reply-title"> Write a comment <small><a rel="nofollow" id="cancel-comment-reply-link" href="/bloguri-culinare-preferate#respond" style="display:none;">Anulează răspunsul</a></small></h3>
            
            <form action="/comment/create/@ViewBag.Topic.SystemName" method="POST" id="commentform" class="comment-form">
                <p class="comment-form-comment">
                    
                <label for="comment"> Comment </label>
                <textarea id="comment" name="Comment" cols="45" rows="8" maxlength="65525"></textarea>
               
                <label for="author">Full Name <span class="required">*</span></label> 
                <input id="author" name="FullName" type="text" size="30" maxlength="245">
                    <input hidden name="TopicId" value="@ViewBag.Topic.Id" type="text">

                <input type="submit" id="submit" class="submit" value="Submit"> 
            </form>
        </div>

    </div>
</div>
